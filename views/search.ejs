<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(project != '') { %>
    <% project.forEach(function(project, index){ %>
    <a href="/project/<%= project._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= project.image %>" alt="<%= project.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= project.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>